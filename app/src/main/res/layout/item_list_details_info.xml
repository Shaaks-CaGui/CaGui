<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:padding="10sp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20sp"
        app:cardElevation="20sp"
        android:layout_margin="12sp"
        android:outlineSpotShadowColor="@color/second_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/ll_details_info1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:text="Overview"
                    android:textColor="@color/second_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_visible_arrow1"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginEnd="2sp"
                    android:src="@drawable/down_arrow" />

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_line1"
                android:layout_width="150sp"
                android:layout_height="1sp"
                android:layout_marginLeft="8sp"
                android:background="@drawable/line_background"
                android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10sp">

            <TextView
                android:id="@+id/tv_details_info1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expand_string_test1"
                />

        </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20sp"
        app:cardElevation="20sp"
        android:layout_margin="12sp"
        android:outlineSpotShadowColor="@color/second_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_info1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_details_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_info_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:text="Path"
                        android:textColor="@color/second_color"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_visible_arrow2"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginEnd="2sp"
                        android:src="@drawable/down_arrow" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_line2"
                android:layout_width="150sp"
                android:layout_height="1sp"
                android:layout_marginLeft="8sp"
                android:background="@drawable/line_background"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <TextView
                    android:id="@+id/tv_details_info2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/expand_string_test1"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>